{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNEXT",
    "lib": ["es6", "dom"],
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "sourceMap": false,
    "rootDir": "./src",
    "strict": true,
    "outDir": "./es",
    "declarationDir": "es",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
